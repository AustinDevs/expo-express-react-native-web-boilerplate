{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "react-app",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "jsx-a11y/href-no-hash": [0]
  },
  "settings": {
    "react": {
      "version": "16.4.2"
    },
    "propWrapperFunctions": ["forbidExtraProps"]
  },
  "parser": "babel-eslint"
}
